{
    "糖醋排骨": {
        "image": "images/排骨.jpg",
        "title": "糖醋排骨",
        "category": "家常菜",
        "time": "60min",
        "likes": "800+",
        "ingredients": [
            "排骨 500g，新鲜",
            "生姜 3片，去皮",
            "葱 1根，新鲜",
            "蒜 2瓣，去皮"
        ],
        "condiments": [
            "生抽 2勺，约30ml",
            "老抽 1勺，约15ml",
            "醋 2勺，米醋",
            "糖 3勺，白砂糖",
            "料酒 1勺，约15ml"
        ],
        "steps": [
            "排骨冷水下锅，焯水去血沫，捞出沥干。",
            "锅中加油，放入排骨煎至微黄。",
            "加入姜片、葱段、蒜炒香。",
            "倒入生抽、老抽、醋、糖、料酒，翻炒均匀。",
            "加适量清水，盖锅小火炖30分钟。",
            "大火收汁，至汤汁浓稠即可出锅。"
        ]
    }
}